#include <iostream>
using namespace std;
int main()
{
    int num1=0,num2=0;
    char y;
    char choice;
    cout<<"--------------------- Calculator ---------------------";
    while(true)
    {
        cout<<"\n Enter first num: ";
        cin>>num1;
        cout<<"\n Enter second num: ";
        cin>>num2;

        cout<<"\nEnter your choice :\n1. +\n2. -\n3. *\n4. /\n";
        cin>>choice;

        if(choice=='+') cout<<"\nThe addition of "<<num1<<" and "<<num2<<" is: "<<num1+num2<<"\n";
        else if(choice=='-') cout<<"\nThe subtraction of "<<num1<<" and "<<num2<<" is: "<<num1-num2<<"\n";
        else if(choice=='*') cout<<"\nThe multiplication of "<<num1<<" and "<<num2<<" is: "<<num1*num2<<"\n";
        else if(choice=='/') cout<<"\nThe division of "<<num1<<" and "<<num2<<" is: "<<num1/num2<<"\n";
        else cout<<"wrong choice\n";

        system("pause");
        system("cls");
        }
    return 0;
}
